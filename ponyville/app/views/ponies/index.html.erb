<h2 id = "title">The Ponies of Ponyville</h2>

<div class = "add"><%= link_to 'Add a Pony', new_pony_path %></div>

<div>
  <% @ponies.each do |pony| %>
    <div>
      <li class= "pony_link"><%= link_to pony.name, pony %></li>
      <div class="pony_show>">
        <p><%= render 'show', pony: pony %></p>
      </div>
    </div>
  <% end %>
</div>
